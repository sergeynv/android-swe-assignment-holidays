<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/date_month_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Mar 12"/>

        <TextView
            android:id="@+id/date_weekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Saturday"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/country_code_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="DE"/>

        <TextView
            android:id="@+id/country_code_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="CH"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/a_holidays_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/a_holiday_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Holiday in A" />

            <TextView
                android:id="@+id/a_more_holidays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                tools:text="+1 more" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/b_holidays_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/b_holiday_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                tools:text="Long long long long long long long Holiday in A" />

            <TextView
                android:id="@+id/b_more_holidays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:maxLines="1"
                tools:text="+2 more" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>